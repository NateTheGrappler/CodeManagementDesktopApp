<Page x:Class="CodeManagementSystem.bookManager"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CodeManagementSystem"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="bookManager">

    <!--Main Grid that Holds everything-->
    <Grid Background="{StaticResource MainBackgroundBrushKey}">

        <!--The Definitions for the Grid rows and columns-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="60"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="67*"/>
            <RowDefinition Height="323*"/>
        </Grid.RowDefinitions>

        <!--__________________________The Top of the UI________________________________-->

        <!--The Title-->
        <Border Grid.Column="2" Margin="2,2,2,2" Grid.Row="0" BorderBrush="{StaticResource MainBorderBrushKey}" BorderThickness="3">
            <Viewbox Stretch="Uniform" Margin="1">
                <TextBlock Text="Book Manager / Reader" Margin="2, 2, 4, 2" Foreground="{StaticResource MainBorderBrushKey}" FontWeight="Bold" FontStyle="Italic" FontFamily="Microsoft YaHei" TextAlignment="Center" />
            </Viewbox>
        </Border>

        <!--The Button to back to the main menu-->
        <Border Grid.Column="0" Margin="2,2,2,2" Grid.Row="0" BorderBrush="{StaticResource MainBorderBrushKey}" BorderThickness="3">
            <Button x:Name="BackButton" Style="{DynamicResource RounddButton}" Foreground="AliceBlue" BorderBrush="#FF075A9B" BorderThickness="3" Margin="4,4,4,4" Background="#FF0078D7" Click="BackButton_Click">
                <TextBlock Text="&lt;" FontSize="32" FontWeight="Bold" FontFamily="Matura MT Script Capitals" Margin="0,0,2.2,3"/>
            </Button>
        </Border>

        <!--The Help Button to Explain how this page works-->
        <Border Grid.Column="1" Margin="2,2,2,2" Grid.Row="0" BorderBrush="{StaticResource MainBorderBrushKey}" BorderThickness="3">
            <Button x:Name="HelpButton" Style="{DynamicResource RounddButton}" Foreground="AliceBlue" BorderBrush="#FF075A9B" BorderThickness="3" Margin="4,4,4,4" Background="#FF0078D7" Click="BackButton_Click">
                <TextBlock Text="?" FontSize="32" FontWeight="Bold" FontFamily="Arial" Margin="0,0 0,3"/>
            </Button>
        </Border>

        <!--The Add New Book Button-->
        <Border BorderBrush="{StaticResource MainBorderBrushKey}" BorderThickness="3" Grid.Column="3" Margin="2,2,2,2">
            <Button BorderThickness="3" Style="{DynamicResource RounddButton}" x:Name="NewButton" HorizontalAlignment="Center" VerticalAlignment="Center"  Background="Transparent" Width="45" Height="45" BorderBrush="#FF0078D7" Grid.Column="3" Grid.Row="0" ToolTip="Add In A New Book" Click="playAddContentGUI">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <Rectangle Width="27" Height="27" Fill="#FF0078D7" VerticalAlignment="Center">
                            <Rectangle.OpacityMask>
                                <ImageBrush ImageSource="/Images/plusButtonImage-removebg-preview.png" Stretch="Uniform"/>
                            </Rectangle.OpacityMask>
                        </Rectangle>
                    </StackPanel>
                </Button.Content>
            </Button>
        </Border>

        <!--The Delete A Selected Book Button-->
        <Border BorderBrush="{StaticResource MainBorderBrushKey}" BorderThickness="3" Grid.Column="4" Margin="2,2,2,2">
            <Button BorderThickness="3" Style="{DynamicResource RounddButton}" x:Name="DeleteButton" HorizontalAlignment="Center" VerticalAlignment="Center"  Background="Transparent" Width="45" Height="45" BorderBrush="#FF0078D7" Grid.Column="4" Grid.Row="0" ToolTip="Deleted Selected Video">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <Rectangle Width="27" Height="27" Fill="#FF0078D7" VerticalAlignment="Center">
                            <Rectangle.OpacityMask>
                                <ImageBrush ImageSource="/Images/trashcanPng.png" Stretch="Uniform"/>
                            </Rectangle.OpacityMask>
                        </Rectangle>
                    </StackPanel>
                </Button.Content>
            </Button>
        </Border>

        <!--__________________________The List Box That Stores the PDFs data________________________________-->
        <ListBox x:Name="BookListBox" Grid.Row="1" Grid.ColumnSpan="5" Margin="20,10,20,20" Background="LightGray" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Grid.RowSpan="2">

            <!--Set up a uniform grid so that way the book objects are oranized from side to side-->
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="4"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>

            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalAlignment" Value="Left"/>
                    <Setter Property="VerticalAlignment"   Value="Top" />
                    <Setter Property="Margin"              Value="0, 5, 0, 0"   />

                </Style>

            </ListBox.ItemContainerStyle>

            <!--The Actual Content thats displayed inside of each item-->
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border CornerRadius="3" BorderBrush="{StaticResource DarkBorderBrushKey}" BorderThickness="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="{StaticResource MainBorderBrushKey}">
                        <!--The main Grid-->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!--The First Page of the PDF as a Cover-->
                            <Image Margin="3" Grid.Column="0" Grid.Row="0" Source="{Binding cover}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

                            <!--The Title of the Book-->
                            <Border  Grid.Row="1" Margin="2" BorderThickness="1" CornerRadius="3" BorderBrush="{StaticResource DarkBorderBrushKey}" Background="{StaticResource MainBorderBrushKey}">
                                <TextBlock Text="{Binding title}" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Microsoft Yi Baiti" FontWeight="Bold" FontSize="14" Foreground="White"/>
                            </Border>

                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>

        </ListBox>



        <!--____________________________The Pop Up GUI for Downloading______________________________-->
        
        <!--The Translucent Box for background darkening-->
        <Rectangle x:Name="TranslucentBox" Fill="Black" Grid.ColumnSpan="5" Grid.RowSpan="3" Opacity="0" Panel.ZIndex="-10"/>

        <!--The Border the holds the actual gui and is rounded-->
        <Border x:Name="AddBookBorder" Grid.Column="1" Grid.ColumnSpan="3" BorderBrush="{StaticResource DarkBorderBrushKey}" Background="{StaticResource MainBackgroundBrushKey}" Grid.Row="0" Grid.RowSpan="3" Margin="20,20,20,20" BorderThickness="3" CornerRadius="15" ClipToBounds="True">
            <!--The main content grid + row and column defs-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="45"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>

                <!--The Title-->
                <Border Margin="0, 0, 2, 2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderThickness="0, 0, 3, 3" BorderBrush="{StaticResource DarkBorderBrushKey}">
                    <Viewbox Stretch="Uniform" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="0" Grid.Column="0">
                        <TextBlock Text="Add A New Book To Your Library" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Margin="4" FontWeight="Bold" Foreground="{StaticResource MainBorderBrushKey}"/>
                    </Viewbox>
                </Border >
                
                <!--The Back Button-->
                <Border Grid.Column="1" Margin="2, 0, 0, 2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderThickness="3, 0, 0, 3" BorderBrush="{StaticResource DarkBorderBrushKey}" ClipToBounds="True">
                    <Button Margin="3" BorderThickness="3" Style="{DynamicResource RounddButton}" x:Name="CloseAddGUI" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Background="{StaticResource MainBorderBrushKey}" BorderBrush="{StaticResource DarkBorderBrushKey}" Grid.Column="0" Grid.Row="0" ToolTip="Close This Window" Click="playAddContentGUI">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <Rectangle Width="20" Height="20" Fill="White" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Rectangle.OpacityMask>
                                        <ImageBrush ImageSource="\Images\Close.png" Stretch="Uniform"/>
                                    </Rectangle.OpacityMask>
                                </Rectangle>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </Border>

                <!--The Grid That Holds the entire data input-->
                <Grid Grid.Row="1" Grid.ColumnSpan="2" Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>

                    <!--The URL input-->
                    <TextBlock x:Name="URLLabel"  Text="URL: " Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="{StaticResource MainBorderBrushKey}" FontWeight="Bold" FontSize="16"/>
                    <TextBox x:Name="URLTextBox" Grid.Column="1" Grid.Row="0" Margin="0, 10, 10, 10"/>

                    <!--The Title Input-->
                    <Label Content="Title: " Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="{StaticResource MainBorderBrushKey}" FontWeight="Bold" FontSize="16"/>
                    <TextBox x:Name="TitleTextBox" Grid.Column="1" Grid.Row="1" Margin="0, 10, 10, 10"/>

                    <!--The Category Input if Need Be -->
                    <Label Content="Subject: " Grid.Row="2" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="{StaticResource MainBorderBrushKey}" FontWeight="Bold" FontSize="16"/>
                    <TextBox x:Name="SubjectTextBox" Grid.Column="1" Grid.Row="2" Margin="0, 10, 10, 10"/>

                    <!--The Radio Buttons Between from File Or From Url-->
                    <Grid x:Name="RadioButtonGrid" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Select Form of Book Upload:  " Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="{StaticResource MainBorderBrushKey}" FontWeight="Bold" FontSize="12"/>
                        <RadioButton x:Name="DriveRadioButton" Content="From Drive" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="changedRadioButtons"/>
                        <RadioButton x:Name="URLRadioButton" Content="From URL"     Grid.Column="1" HorizontalAlignment="Center" IsChecked="True" VerticalAlignment="Center" Checked="changedRadioButtons"/>
                    </Grid>

                    <!--The A Progress Bar to show loading (Maybe)-->
                </Grid>
                
                <!--The Grid Holding the Add and Clear Buttons-->
                <Grid Grid.Row="2" Grid.ColumnSpan="2" Margin="5, 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!--The Save and Delete New books Buttons-->
                    <Button x:Name="AddNewContentButton"  BorderBrush="#FF075A9B" BorderThickness="3"  Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#FF0078D7" Margin="6, 6, 2, 6" Style="{DynamicResource TwoRoundedCornersLeft}"  Content="Add"   Foreground="White" FontSize="14" FontWeight="Bold" FontFamily="Microsoft YaHei" Click="AddNewContentButton_Click"/>
                    <Button x:Name="ClearNewContentButton" BorderBrush="#FF075A9B" BorderThickness="3"  Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#FF0078D7" Margin="2, 6, 6, 6" Style="{DynamicResource TwoRoundedCornersRight}" Content="Clear" Foreground="White" FontSize="14" FontWeight="Bold" FontFamily="Microsoft YaHei" Click="ClearNewContentButton_Click"/>
                </Grid>

            </Grid>

            <Border.RenderTransform>
                <ScaleTransform ScaleX="1" ScaleY="0" CenterY="0.5" CenterX="0.5"/>
            </Border.RenderTransform>
        </Border>

    </Grid>
</Page>
