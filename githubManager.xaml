<Page x:Class="CodeManagementSystem.githubManager"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CodeManagementSystem"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="githubManager">

    <Grid Background="{StaticResource MainBackgroundBrushKey}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!--The Return Button-->
        <Border Grid.Column="0" Margin="2,2,2,2" Grid.Row="0" BorderBrush="{StaticResource MainBorderBrushKey}" BorderThickness="3">
            <Button x:Name="BackButton" Style="{DynamicResource RounddButton}" Foreground="AliceBlue" BorderBrush="#FF075A9B" BorderThickness="3" Margin="4,4,4,4" Background="#FF0078D7" Click="BackButton_Click">
                <TextBlock Text="&lt;" FontSize="32" FontWeight="Bold" FontFamily="Matura MT Script Capitals" Margin="0,0,2.2,3"/>
            </Button>
        </Border>

        <!--The Main Title-->
        <Border Grid.Column="2" Margin="2,2,2,2" Grid.Row="0" BorderBrush="{StaticResource MainBorderBrushKey}" BorderThickness="3">
            <Viewbox Stretch="Uniform" Margin="1">
                <TextBlock Text="Github Repository Manager" Margin="2, 2, 4, 2" Foreground="{StaticResource MainBorderBrushKey}" FontWeight="Bold" FontStyle="Italic" FontFamily="Microsoft YaHei" TextAlignment="Center" />
            </Viewbox>
        </Border>
        
        <!--The Grid below the title and back button-->
        <Grid Grid.Row="1" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
           
            <!--The Grid for the side buttons-->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/> <!--Search Regular      -->
                    <RowDefinition Height="*"/> <!--Search by tag       -->
                    <RowDefinition Height="*"/> <!--Search by collection-->
                    <RowDefinition Height="*"/> <!--Search by status    -->
                    <RowDefinition Height="*"/> <!--Add a new repo      -->
                    <RowDefinition Height="*"/> <!--Delete a repo       -->
                    <RowDefinition Height="*"/> <!--Show Repo Info      -->
                </Grid.RowDefinitions>
                
                <!--The regular search button-->
                <Button x:Name="RegularSearchButton" Style="{StaticResource EvenLessRoundedButton}" Margin="2" Background="{StaticResource MainBorderBrushKey}" BorderBrush="{StaticResource DarkBorderBrushKey}" BorderThickness="3">
                    <TextBlock Text="Search By Name" FontWeight="Bold" Foreground="White" TextWrapping="Wrap" FontSize="12"/>
                </Button>
                
                <!--The search by tag button-->
                <Button Grid.Row="1" x:Name="TagSearchButton" Style="{StaticResource EvenLessRoundedButton}" Margin="2" Background="{StaticResource MainBorderBrushKey}" BorderBrush="{StaticResource DarkBorderBrushKey}" BorderThickness="3">
                     <TextBlock Text="Search By Tag" FontWeight="Bold" Foreground="White" TextWrapping="Wrap" FontSize="12"/>
                </Button>
                
                <!--The search by Collection button-->
                <Button Grid.Row="2" x:Name="CollectionSearchButton" Style="{StaticResource EvenLessRoundedButton}" Margin="2" Background="{StaticResource MainBorderBrushKey}" BorderBrush="{StaticResource DarkBorderBrushKey}" BorderThickness="3">
                     <TextBlock Text="Search By Collection" FontWeight="Bold" Foreground="White" TextWrapping="Wrap" FontSize="12"/>
                </Button>
                
                <!--The search by Status button-->
                <Button Grid.Row="3" x:Name="StatusSearchButton" Style="{StaticResource EvenLessRoundedButton}" Margin="2" Background="{StaticResource MainBorderBrushKey}" BorderBrush="{StaticResource DarkBorderBrushKey}" BorderThickness="3">
                     <TextBlock Text="Search By Status" FontWeight="Bold" Foreground="White" TextWrapping="Wrap" FontSize="12"/>
                </Button>
                
                <!--The Add a new repo button-->
                <Button Grid.Row="4" x:Name="AddNewRepoButton" Style="{StaticResource EvenLessRoundedButton}" Margin="2" Background="{StaticResource MainBorderBrushKey}" BorderBrush="{StaticResource DarkBorderBrushKey}" BorderThickness="3" HorizontalContentAlignment="Center">
                     <TextBlock Text="Add A New Repo" FontWeight="Bold" Foreground="White" TextWrapping="Wrap" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>
                
                <!--The Add a new repo button-->
                <Button Grid.Row="5" x:Name="DeleteRepoButton" Style="{StaticResource EvenLessRoundedButton}" Margin="2" Background="{StaticResource MainBorderBrushKey}" BorderBrush="{StaticResource DarkBorderBrushKey}" BorderThickness="3" HorizontalContentAlignment="Center">
                     <TextBlock Text="Delete Selected Repository" FontWeight="Bold" Foreground="White" TextWrapping="Wrap" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>
                
                <!--The Add a new repo button-->
                <Button Grid.Row="6" x:Name="InfoRepoButton" Style="{StaticResource EvenLessRoundedButton}" Margin="2" Background="{StaticResource MainBorderBrushKey}" BorderBrush="{StaticResource DarkBorderBrushKey}" BorderThickness="3" HorizontalContentAlignment="Center">
                     <TextBlock Text="See Repository Info" FontWeight="Bold" Foreground="White" TextWrapping="Wrap" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>
            </Grid>
        </Grid>

    </Grid>
</Page>
