<Page x:Class="CodeManagementSystem.githubManager"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CodeManagementSystem"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="githubManager">

    <Grid Background="{StaticResource MainBackgroundBrushKey}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!--The Return Button-->
        <Border Grid.Column="0" Margin="2,2,2,2" Grid.Row="0" BorderBrush="{StaticResource MainBorderBrushKey}" BorderThickness="3">
            <Button x:Name="BackButton" Style="{DynamicResource RounddButton}" Foreground="AliceBlue" BorderBrush="#FF075A9B" BorderThickness="3" Margin="4,4,4,4" Background="#FF0078D7" Click="BackButton_Click">
                <TextBlock Text="&lt;" FontSize="32" FontWeight="Bold" FontFamily="Matura MT Script Capitals" Margin="0,0,2.2,3"/>
            </Button>
        </Border>

        <!--The Main Title-->
        <Border Grid.Column="2" Margin="2,2,2,2" Grid.Row="0" BorderBrush="{StaticResource MainBorderBrushKey}" BorderThickness="3">
            <Viewbox Stretch="Uniform" Margin="1">
                <TextBlock Text="Github Repository Manager" Margin="2, 2, 4, 2" Foreground="{StaticResource MainBorderBrushKey}" FontWeight="Bold" FontStyle="Italic" FontFamily="Microsoft YaHei" TextAlignment="Center" />
            </Viewbox>
        </Border>
        
        <!--The Grid below the title and back button-->
        <Grid Grid.Row="1" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
           
            <!--The Grid for the side buttons-->
            <Border BorderThickness="0, 0, 3, 0" BorderBrush="{StaticResource MainBorderBrushKey}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <!--Search Regular      -->
                        <RowDefinition Height="*"/>
                        <!--Search by tag       -->
                        <RowDefinition Height="*"/>
                        <!--Search by collection-->
                        <RowDefinition Height="*"/>
                        <!--Search by status    -->
                        <RowDefinition Height="*"/>
                        <!--Add a new repo      -->
                        <RowDefinition Height="*"/>
                        <!--Delete a repo       -->
                        <RowDefinition Height="*"/>
                        <!--Show Repo Info      -->
                    </Grid.RowDefinitions>

                    <!--The regular search button-->
                    <Button x:Name="RegularSearchButton" Style="{StaticResource EvenLessRoundedButton}" Margin="2" Background="{StaticResource MainBorderBrushKey}" BorderBrush="{StaticResource DarkBorderBrushKey}" BorderThickness="3">
                        <TextBlock Text="Search By Name" FontWeight="Bold" Foreground="White" TextWrapping="Wrap" FontSize="12"/>
                    </Button>

                    <!--The search by tag button-->
                    <Button Grid.Row="1" x:Name="TagSearchButton" Style="{StaticResource EvenLessRoundedButton}" Margin="2" Background="{StaticResource MainBorderBrushKey}" BorderBrush="{StaticResource DarkBorderBrushKey}" BorderThickness="3">
                        <TextBlock Text="Search By Tag" FontWeight="Bold" Foreground="White" TextWrapping="Wrap" FontSize="12"/>
                    </Button>

                    <!--The search by Collection button-->
                    <Button Grid.Row="2" x:Name="CollectionSearchButton" Style="{StaticResource EvenLessRoundedButton}" Margin="2" Background="{StaticResource MainBorderBrushKey}" BorderBrush="{StaticResource DarkBorderBrushKey}" BorderThickness="3">
                        <TextBlock Text="Search By Collection" FontWeight="Bold" Foreground="White" TextWrapping="Wrap" FontSize="12"/>
                    </Button>

                    <!--The search by Status button-->
                    <Button Grid.Row="3" x:Name="StatusSearchButton" Style="{StaticResource EvenLessRoundedButton}" Margin="2" Background="{StaticResource MainBorderBrushKey}" BorderBrush="{StaticResource DarkBorderBrushKey}" BorderThickness="3">
                        <TextBlock Text="Search By Status" FontWeight="Bold" Foreground="White" TextWrapping="Wrap" FontSize="12"/>
                    </Button>

                    <!--The Add a new repo button-->
                    <Button Grid.Row="4" x:Name="AddNewRepoButton" Style="{StaticResource EvenLessRoundedButton}" Margin="2" Background="{StaticResource MainBorderBrushKey}" BorderBrush="{StaticResource DarkBorderBrushKey}" BorderThickness="3" HorizontalContentAlignment="Center" ToolTip="Save a Github Repository you wish to use" Click="doAddNewAnimation">
                        <TextBlock Text="Add A New Repo" FontWeight="Bold" Foreground="White" TextWrapping="Wrap" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button>

                    <!--The Delete selected rep-->
                    <Button Grid.Row="5" x:Name="DeleteRepoButton" Style="{StaticResource EvenLessRoundedButton}" Margin="2" Background="{StaticResource MainBorderBrushKey}" BorderBrush="{StaticResource DarkBorderBrushKey}" BorderThickness="3" HorizontalContentAlignment="Center" ToolTip="Deleted Selected Repo" Click="deleteSelectedRepo">
                        <TextBlock Text="Delete Selected Repository" FontWeight="Bold" Foreground="White" TextWrapping="Wrap" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button>

                    <!--The See extra repo info-->
                    <Button Grid.Row="6" x:Name="InfoRepoButton" Style="{StaticResource EvenLessRoundedButton}" Margin="2" Background="{StaticResource MainBorderBrushKey}" BorderBrush="{StaticResource DarkBorderBrushKey}" BorderThickness="3" HorizontalContentAlignment="Center" Click="doSeeInfoAnimation">
                        <TextBlock Text="See Repository Info" FontWeight="Bold" Foreground="White" TextWrapping="Wrap" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button>
                </Grid>
            </Border>
            
            <!--The Grid for the list view and seach bar-->
            <Grid Grid.Column="1" Margin="5, 0, 0, 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!--The search text-->
                <Viewbox Stretch="Uniform" Margin="0, 2, 0, 2">
                    <TextBlock Text="Search:" Foreground="{StaticResource MainBorderBrushKey}" FontWeight="Bold"/>
                </Viewbox>
                <!--The search textbox-->
                <TextBox x:Name="SearchTB" Grid.Column="1" Margin="0, 5, 10, 5" />

                <!--The List View of all the github repo items-->
                <ListView x:Name="githubListView" Grid.Row="1" Grid.ColumnSpan="2" Margin="5, 5, 10, 10" BorderThickness="2" ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel HorizontalAlignment="Stretch"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>

                    <!--Set the style for the inner contents of the listbox-->
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="HorizontalAlignment"        Value="Stretch"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="VerticalAlignment"          Value="Stretch"/>
                            <Setter Property="VerticalContentAlignment"   Value="Stretch"/>
                            <Setter Property="BorderBrush"                Value="#E1E8ED"/>
                            <Setter Property="BorderThickness"            Value="1"/>
                            <Setter Property="Margin"                     Value="0, 0, 0, 3"/>
                            <Setter Property="Padding"                    Value="0"/>
                            <!--Customize the look whenever the mouse hovers over one of the items-->
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F0F8FF"/>
                                    <Setter Property="BorderBrush" Value="#4A90E2"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#E8F4FF"/>
                                    <Setter Property="BorderBrush" Value="#4A90E2"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <!--The Grid that Defines space for thumbnail, link, category, and untility button-->
                            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="30"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                </Grid.RowDefinitions>

                                <!--The Thumbnail that is visible-->
                                <Viewbox>
                                    <Image Source="/Images/githubCat.jpg" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stretch="UniformToFill" Height="30"/>
                                </Viewbox>

                                <!--Background rectange for color?-->
                                <Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#F8FAFC" BorderBrush="#E1E8ED" Grid.Column="1" Margin="0" CornerRadius="3, 0, 0, 3"/>

                                <!--The (Editable?) text box with the link-->
                                <Viewbox Stretch="Uniform" MaxHeight="50" Grid.Column="1" Margin="4, 0, 4, 0">
                                    <WrapPanel MaxWidth="1500">
                                        <TextBlock TextWrapping="Wrap" TextAlignment="Right" FontSize="16">
                                    <Hyperlink NavigateUri="{Binding url}" RequestNavigate="Hyperlink_RequestNavigate">
                                        <Run Text="{Binding name}" Foreground="MediumPurple" FontWeight="SemiBold"/>
                                    </Hyperlink>
                                        </TextBlock>
                                    </WrapPanel>
                                </Viewbox>

                                <!--The Button that changes whether a favorite is selected-->
                                <Button BorderThickness="0" Style="{DynamicResource RounddButton}" x:Name="favoriteButton" HorizontalAlignment="Center" VerticalAlignment="Center"  Background="Transparent" Width="30" Height="30" BorderBrush="#FF0078D7" Grid.Column="2" ToolTip="Favorite/Unfavorite this item" Click="favoriteStarButtonClick">
                                    <Button.Content>
                                        <StackPanel Orientation="Horizontal">
                                            <Rectangle x:Name="favoriteRectangle" Width="20" Height="20" Fill="DarkBlue" VerticalAlignment="Center" Loaded="LoadFavoritedStatus">
                                                <Rectangle.OpacityMask>
                                                    <ImageBrush x:Name="favoriteImageBrush" ImageSource="/Images/star-outline.png" Stretch="Uniform"/>
                                                </Rectangle.OpacityMask>
                                            </Rectangle>
                                        </StackPanel>
                                    </Button.Content>
                                </Button>

                                <!--The tags-->
                                <ScrollViewer Grid.Row="1" Grid.ColumnSpan="2" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                                    <WrapPanel x:Name="TagsPanelListView" Loaded="LoadListViewTags">

                                    </WrapPanel>
                                </ScrollViewer>

                                <!--The Collection Box-->
                                <Border Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#F8FAFC" BorderBrush="Gray" Margin="0" CornerRadius="0" BorderThickness="1, 0, 1, 0" >
                                    <Viewbox Stretch="Uniform">
                                        <TextBlock Text="{Binding collection}" TextWrapping="Wrap" TextAlignment="Center" FontSize="16" Foreground="DarkBlue" FontWeight="Medium" Margin="10, 0, 10,0"/>
                                    </Viewbox>
                                </Border>

                                <!--The Button that should hold the avaliable options-->
                                <Border Grid.Column="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#F8FAFC" BorderBrush="#E1E8ED" Margin="0" CornerRadius="0, 8, 8, 0"/>
                                <Button BorderThickness="0" Style="{DynamicResource RounddButton}" x:Name="ExtraVideoInfo" HorizontalAlignment="Center" VerticalAlignment="Center"  Background="Transparent" Width="45" Height="45" BorderBrush="#FF0078D7" Grid.Column="3" ToolTip="View More Information" Click="OpenContextMenu" ContextMenu="{StaticResource VideoContextMenuKey}">
                                    <Button.Content>
                                        <StackPanel Orientation="Horizontal">
                                            <Rectangle Width="15" Height="15" Fill="DarkBlue" VerticalAlignment="Center">
                                                <Rectangle.OpacityMask>
                                                    <ImageBrush ImageSource="/images/verticalDots.png" Stretch="Uniform"/>
                                                </Rectangle.OpacityMask>
                                            </Rectangle>
                                        </StackPanel>
                                    </Button.Content>
                                </Button>


                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListView>
            </Grid>
        </Grid>

        <!--Translucent black box-->
        <Rectangle x:Name="TranslucentBox" Grid.ColumnSpan="10" Grid.RowSpan="10" Fill="Black" Opacity="0" Panel.ZIndex="-5"/>
        
        <!--_______________________________Add New Repo GUI_____________________________________________-->
        <Border x:Name="NewRepoGUI" Background="{StaticResource MainBackgroundBrushKey}" Grid.RowSpan="2" Grid.ColumnSpan="2" Margin="35, 25, 35, 25" BorderThickness="3" BorderBrush="{StaticResource DarkBorderBrushKey}" CornerRadius="10">

            <!--Main Content Grid-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="35"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="35"/>
                </Grid.RowDefinitions>
                
                <!--The main Title-->
                <Border Grid.Column="0" Margin="0" Grid.Row="0" BorderBrush="{StaticResource DarkBorderBrushKey}" BorderThickness="0, 0, 3, 3">
                    <Viewbox Stretch="Uniform" Margin="1">
                        <TextBlock Text="Add A New Github Repository" Margin="2, 2, 4, 2" Foreground="{StaticResource MainBorderBrushKey}" FontWeight="Bold" FontStyle="Italic" FontFamily="Microsoft YaHei" TextAlignment="Center" />
                    </Viewbox>
                </Border>
                <!--The Close GUI button-->
                <Border Grid.Row="0" Grid.Column="2" Margin="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderThickness="0, 0, 0, 3" BorderBrush="{StaticResource DarkBorderBrushKey}" ClipToBounds="True">
                    <Button Margin="3" BorderThickness="3" Style="{DynamicResource RounddButton}" x:Name="closeAddNewGUI" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Background="{StaticResource MainBorderBrushKey}" BorderBrush="{StaticResource DarkBorderBrushKey}" Grid.Column="0" Grid.Row="0" ToolTip="Close This Window" Click="doAddNewAnimation">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <Rectangle Width="20" Height="20" Fill="White" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Rectangle.OpacityMask>
                                        <ImageBrush ImageSource="\Images\Close.png" Stretch="Uniform"/>
                                    </Rectangle.OpacityMask>
                                </Rectangle>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </Border>
            
                <!--The Grid For all of the input fields-->
                <ScrollViewer Grid.Row="1" Grid.ColumnSpan="2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60"/> <!--The Name of repo-->
                            <RowDefinition Height="60"/> <!--Repo URL-->
                            <RowDefinition Height="60"/> <!--Collection if applicable-->
                            <RowDefinition Height="60"/> <!--Ask if the user wants to collect metadata for repo-->
                            <RowDefinition Height="60"/> <!--Ask user to get tags-->
                            <RowDefinition Height="auto"/>  <!--Leave the rest for tags-->
                        </Grid.RowDefinitions>
                        
                        <!--The name of the repo-->
                        <TextBlock Margin="5, 0, 0, 0" Text="Name Of Repository" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold" Foreground="{StaticResource MainBorderBrushKey}"/>
                        <TextBox x:Name="ANName" Grid.Row="0" Grid.Column="1" Margin="15"/>
                        
                        <!--The Url of the repo-->
                        <TextBlock Grid.Row="1" Margin="5, 0, 0, 0" Text="Link To Repository" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold" Foreground="{StaticResource MainBorderBrushKey}"/>
                        <TextBox x:Name="ANLink" Grid.Row="1" Grid.Column="1" Margin="15"/>

                        <!--The collection of the repo-->
                        <TextBlock Grid.Row="2" Margin="5, 0, 0, 0" Text="Collection(Optional)" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold" Foreground="{StaticResource MainBorderBrushKey}"/>
                        <TextBox x:Name="ANCollection" Grid.Row="2" Grid.Column="1" Margin="15"/>

                        <!--The Grid holding the metaData question-->
                        <Grid Grid.Row="3" Grid.ColumnSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Row="2" Margin="5, 0, 0, 0" Text="Get Repo MetaData?" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold" Foreground="{StaticResource MainBorderBrushKey}"/>
                            <!--Yes Radio Button-->
                            <Viewbox Grid.Row="1" Grid.Column="1" Margin="15">
                                <RadioButton x:Name="YesRB" Content="Yes" GroupName="fileOrFolder" IsChecked="True" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            </Viewbox>
                            <!--No Radio Button-->
                            <Viewbox Grid.Row="1" Grid.Column="2" Margin="15">
                                <RadioButton x:Name="NoRB" Content="No" GroupName="fileOrFolder" IsChecked="false" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            </Viewbox>
                        </Grid>
                        
                        <!--tags textbox-->
                        <TextBlock Grid.Row="4" Margin="5, 0, 0, 0" Text="Choose Tag(s): " FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold" Foreground="{StaticResource MainBorderBrushKey}"/>
                        
                        <!--The Grid For getting the tags-->
                        <Grid Grid.Row="5" Grid.ColumnSpan="2" Margin="10">
                            
                            <WrapPanel x:Name="TagsPanel" Margin="10">
                                
                            </WrapPanel>
                        </Grid>
                        

                    </Grid>
                </ScrollViewer>
                
                <!--The Grid for the bottom buttons-->
                <Grid Grid.Row="2" Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!--The Add New Repo Button-->
                    <Button x:Name="ANCreateButton" Style="{StaticResource TwoRoundedCornersLeft}" Margin="3, 3, 1, 5" BorderBrush="{StaticResource DarkBorderBrushKey}" BorderThickness="3" Background="{StaticResource MainBorderBrushKey}" ToolTip="Create New Repo from given informatio" Click="addInNewRepo">
                        <Viewbox>
                            <TextBlock x:Name="ANCreateText" Text="Add New Repo" FontWeight="Bold" Foreground="White"/>
                        </Viewbox>
                    </Button>
                    <!--The Clear Button-->
                    <Button Grid.Column="1" x:Name="ANClearButton" Style="{StaticResource TwoRoundedCornersRight}" Margin="1, 3, 3, 5" BorderBrush="{StaticResource DarkBorderBrushKey}" BorderThickness="3" Background="{StaticResource MainBorderBrushKey}" ToolTip="Clear name and other input fields" Click="clearAllFields">
                        <Viewbox>
                            <TextBlock Text="Clear All Fields" FontWeight="Bold" Foreground="White"/>
                        </Viewbox>
                    </Button>
                    
                </Grid>
            </Grid>
            
            <Border.RenderTransform>
                <ScaleTransform ScaleX="1" ScaleY="0" CenterY="0.5" CenterX="0.5"/>
            </Border.RenderTransform>
        </Border>

        <!--__________________________See Repo Information GUI___________________________________________-->
        <Border x:Name="SeeInfoGUI" Background="{StaticResource MainBackgroundBrushKey}" Grid.RowSpan="2" Grid.ColumnSpan="2" Margin="35, 25, 35, 25" BorderThickness="3" BorderBrush="{StaticResource DarkBorderBrushKey}" CornerRadius="10">

            <!--The Main Grid To Hold all of the content-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="35"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="35"/>
                </Grid.RowDefinitions>

                <!--The main Title-->
                <Border Grid.Column="0" Margin="0" Grid.Row="0" BorderBrush="{StaticResource DarkBorderBrushKey}" BorderThickness="0, 0, 3, 3">
                    <Viewbox Stretch="Uniform" Margin="1">
                        <TextBlock x:Name="SIMainTitle" Text="See Info For: " Margin="2, 2, 4, 2" Foreground="{StaticResource MainBorderBrushKey}" FontWeight="Bold" FontStyle="Italic" FontFamily="Microsoft YaHei" TextAlignment="Center" />
                    </Viewbox>
                </Border>
                <!--The Close GUI button-->
                <Border Grid.Row="0" Grid.Column="2" Margin="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderThickness="0, 0, 0, 3" BorderBrush="{StaticResource DarkBorderBrushKey}" ClipToBounds="True">
                    <Button Margin="3" BorderThickness="3" Style="{DynamicResource RounddButton}" x:Name="closeSeeInfoGUI" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Background="{StaticResource MainBorderBrushKey}" BorderBrush="{StaticResource DarkBorderBrushKey}" Grid.Column="0" Grid.Row="0" ToolTip="Close This Window" Click="doSeeInfoAnimation">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <Rectangle Width="20" Height="20" Fill="White" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Rectangle.OpacityMask>
                                        <ImageBrush ImageSource="\Images\Close.png" Stretch="Uniform"/>
                                    </Rectangle.OpacityMask>
                                </Rectangle>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </Border>

                <!--The inner content display for the repo-->
                <ScrollViewer HorizontalScrollBarVisibility="Disabled" Grid.ColumnSpan="2" Grid.Row="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60"/> <!--The Personal Name-->
                            <RowDefinition Height="60"/> <!--The Link-->
                            <RowDefinition Height="60"/> <!--The Collection-->
                            <RowDefinition Height="60"/> <!--The Status-->
                            <RowDefinition Height="60"/> <!--Let User Know Meta Data Starts-->
                            <RowDefinition Height="60"/> <!--The ID-->
                            <RowDefinition Height="60"/> <!--The ownerName-->
                            <RowDefinition Height="60"/> <!--The repoName-->
                            <RowDefinition Height="60"/> <!--The FullrepoName-->
                            <RowDefinition Height="60"/> <!--The FullrepoName-->
                            <RowDefinition Height="60"/> <!--The language-->
                            <RowDefinition Height="Auto" MinHeight="60"/> <!--The description-->
                            <RowDefinition Height="60"/> <!--The Clone URL-->
                            <RowDefinition Height="60"/> <!--The Readme Text-->
                            <RowDefinition Height="auto"/> <!--The Wrappanel that lets you change the tags-->
                        </Grid.RowDefinitions>
                        
                        <!--The Personal Name-->
                        <TextBlock Grid.Row="0" Text="Name:" FontSize="16" Foreground="{StaticResource MainBorderBrushKey}" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5, 0, 0, 0"/>
                        <TextBox   Grid.Row="0" x:Name="SIPersonalName"  Grid.Column="1" Margin="15"/>

                        <!--The Url-->
                        <TextBlock Grid.Row="1" Text="Link:" FontSize="16" Foreground="{StaticResource MainBorderBrushKey}" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5, 0, 0, 0"/>
                        <TextBox   Grid.Row="1" x:Name="SIUrl"  Grid.Column="1" Margin="15"/>

                        <!--The Collection-->
                        <TextBlock Grid.Row="2" Text="Collection:" FontSize="16" Foreground="{StaticResource MainBorderBrushKey}" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5, 0, 0, 0"/>
                        <TextBox   Grid.Row="2" x:Name="SICollection"  Grid.Column="1" Margin="15"/>
                        
                        <!--The Status Options-->
                        <Grid Grid.Row="3" Grid.ColumnSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="2" Margin="5, 0, 0, 0" Text="Current Status" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold" Foreground="{StaticResource MainBorderBrushKey}"/>

                            <!--NonStarted Radio Button-->
                            <Viewbox Grid.Row="1" Grid.Column="1" Margin="15">
                                <RadioButton x:Name="NonStartedRB" Content="NonStarted" GroupName="statusRadio" IsChecked="True" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            </Viewbox>
                            
                            <!--Started Radio Button-->
                            <Viewbox Grid.Row="1" Grid.Column="2" Margin="15">
                                <RadioButton x:Name="StartedRB" Content="Started" GroupName="statusRadio" IsChecked="false" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            </Viewbox>
                            <!--Compeleted Radio Button-->
                            <Viewbox Grid.Row="1" Grid.Column="3" Margin="15">
                                <RadioButton x:Name="CompletedRB" Content="Completed" GroupName="statusRadio" IsChecked="false" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            </Viewbox>
                            
                        </Grid>
                        
                        <!--Let the User Know The MetaData Starts now-->
                        <Border Grid.Row="4" Grid.ColumnSpan="2" BorderThickness="0, 3, 0, 3" BorderBrush="{StaticResource DarkBorderBrushKey}">
                            <Viewbox Margin="12">
                                <TextBlock Text="Meta Data" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="{StaticResource MainBorderBrushKey}"/>
                            </Viewbox>
                        </Border>

                        <!--The ID -->
                        <TextBlock Grid.Row="5" Text="ID:" FontSize="16" Foreground="{StaticResource MainBorderBrushKey}" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5, 0, 0, 0"/>
                        <TextBox   Grid.Row="5" x:Name="SIid"  Grid.Column="1" Margin="15"/>
                        
                        <!--The Owner Name-->
                        <TextBlock Grid.Row="6" Text="Owner:" FontSize="16" Foreground="{StaticResource MainBorderBrushKey}" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5, 0, 0, 0"/>
                        <TextBox   Grid.Row="6" x:Name="SIOwner"  Grid.Column="1" Margin="15"/>
                        
                        <!--The Repo Name-->
                        <TextBlock Grid.Row="7" Text="Repo Name:" FontSize="16" Foreground="{StaticResource MainBorderBrushKey}" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5, 0, 0, 0"/>
                        <TextBox   Grid.Row="7" x:Name="SIRepoName"  Grid.Column="1" Margin="15"/>
                       
                        <!--The Full Repo Name-->
                        <TextBlock Grid.Row="8" Text="Full Name:" FontSize="16" Foreground="{StaticResource MainBorderBrushKey}" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5, 0, 0, 0"/>
                        <TextBox   Grid.Row="8" x:Name="SIFullRepoName"  Grid.Column="1" Margin="15"/>
                       
                        <!--The Lanuage-->
                        <TextBlock Grid.Row="9" Text="Lanuage:" FontSize="16" Foreground="{StaticResource MainBorderBrushKey}" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5, 0, 0, 0"/>
                        <TextBox   Grid.Row="9" x:Name="SILanuage"  Grid.Column="1" Margin="15"/>

                        <!--The description-->
                        <TextBlock Grid.Row="10" Text="Description:" FontSize="16" Foreground="{StaticResource MainBorderBrushKey}" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5, 0, 0, 0" TextWrapping="Wrap"/>
                        <TextBox   Grid.Row="10" x:Name="SIDescription"  Grid.Column="1" Margin="15"/>

                        <!--The Clone Url-->
                        <TextBlock Grid.Row="11" Text="Clone URL:" FontSize="16" Foreground="{StaticResource MainBorderBrushKey}" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5, 0, 0, 0" />
                        <TextBox   Grid.Row="11" x:Name="SICloneUrl"  Grid.Column="1" Margin="15"/>

                        <!--The Readme Content-->
                        <TextBlock Grid.Row="12" Text="Readme:" FontSize="16" Foreground="{StaticResource MainBorderBrushKey}" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5, 0, 0, 0" TextWrapping="Wrap"/>
                        <TextBox   Grid.Row="12" x:Name="SIReadme"  Grid.Column="1" Margin="15"/>

                        <!--The Default Branch-->
                        <TextBlock Grid.Row="13" Text="Branch:" FontSize="16" Foreground="{StaticResource MainBorderBrushKey}" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5, 0, 0, 0" TextWrapping="Wrap"/>
                        <TextBox   Grid.Row="13" x:Name="SIBranch"  Grid.Column="1" Margin="15"/>

                        <!--tags WrapPanel-->
                        <ScrollViewer HorizontalScrollBarVisibility="Disabled" Grid.Row="14" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <WrapPanel x:Name="SItagsPanel"/>
                        </ScrollViewer>

                    </Grid>
                    
                </ScrollViewer>
                
                <!--The Grid for the bottom buttons-->
                <Grid Grid.Row="2" Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!--The Save Changes Button-->
                    <Button x:Name="SISave" Style="{StaticResource TwoRoundedCornersLeft}" Margin="3, 3, 1, 5" BorderBrush="{StaticResource DarkBorderBrushKey}" BorderThickness="3" Background="{StaticResource MainBorderBrushKey}" ToolTip="Create New Repo from given informatio" Click="saveChangesMade" >
                        <Viewbox>
                            <TextBlock x:Name="SISaveText" Text="Save Changes" FontWeight="Bold" Foreground="White"/>
                        </Viewbox>
                    </Button>

                    <!--The Edit Button-->
                    <Button Grid.Column="1" x:Name="SIEdit" Margin="1, 3, 3, 5" BorderBrush="{StaticResource DarkBorderBrushKey}" BorderThickness="3" Background="{StaticResource MainBorderBrushKey}" ToolTip="Allow Editing of any information shown">
                        <Viewbox>
                            <TextBlock Text="Edit Fields" FontWeight="Bold" Foreground="White"/>
                        </Viewbox>
                    </Button>

                    <!--The Undo Button-->
                    <Button Grid.Column="2" x:Name="SIUndoChanges" Style="{StaticResource TwoRoundedCornersRight}" Margin="1, 3, 3, 5" BorderBrush="{StaticResource DarkBorderBrushKey}" BorderThickness="3" Background="{StaticResource MainBorderBrushKey}" ToolTip="Revert To Original Items" Click="undoAllChanges">
                        <Viewbox>
                            <TextBlock Text="Revert Changes" FontWeight="Bold" Foreground="White"/>
                        </Viewbox>
                    </Button>


                </Grid>
            </Grid>

            <Border.RenderTransform>
                <ScaleTransform ScaleX="1" ScaleY="0" CenterY="0.5" CenterX="0.5"/>
            </Border.RenderTransform>
        </Border>

    </Grid>
</Page>
