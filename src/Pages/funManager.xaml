<Page x:Class="CodeManagementSystem.funManager"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CodeManagementSystem"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="funManager">

    <!--Main grid that holds all items-->
    <Grid Background="{StaticResource MainBackgroundBrushKey}">
        
        <!--Row and column defintions-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!--The Title for the page-->
        <Border Grid.Column="1" Margin="2,2,2,2" Grid.Row="0" BorderBrush="{StaticResource MainBorderBrushKey}" BorderThickness="3">
            <Viewbox Stretch="Uniform" Margin="1">
                <TextBlock Text="Entertainment Manager" Margin="2, 2, 4, 2" Foreground="{StaticResource MainBorderBrushKey}" FontWeight="Bold" FontStyle="Italic" FontFamily="Microsoft YaHei" TextAlignment="Center" />
            </Viewbox>
        </Border>

        <!--The back button for the page-->
        <Border Grid.Column="0" Margin="2,2,2,2" Grid.Row="0" BorderBrush="{StaticResource MainBorderBrushKey}" BorderThickness="3">
            <Button x:Name="BackButton" Style="{DynamicResource RounddButton}" Foreground="AliceBlue" BorderBrush="#FF075A9B" BorderThickness="3" Margin="4,4,4,4" Background="#FF0078D7" Click="BackButton_Click">
                <TextBlock Text="&lt;" FontSize="32" FontWeight="Bold" FontFamily="Matura MT Script Capitals" Margin="0,0,2.2,3"/>
            </Button>
        </Border>
        
        <!--The Grid to hold all of the tic tac toe buttons-->
        <Grid  Grid.Row="1" Grid.ColumnSpan="2" Margin="10, 10, 10, 10" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--Grid for actual Tic Tac Toe Board-->
            <Grid x:Name="ticTacToeGrid" Grid.Column="0" Margin="40, 00, 40, 00">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="45"/>
                    </Grid.RowDefinitions>

                <!--The Buttons that make up the actual tic tac toe board-->

                <!--The Top Row of buttons-->
                <Button Grid.Column="0" Grid.Row="0" Style="{StaticResource TransparentHoverButtonStyle}" x:Name="TL" BorderThickness="0, 0, 5, 5" BorderBrush="Black" Click="boardButtonClick">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <Viewbox Stretch="Uniform" Margin="0">
                                <Rectangle x:Name="topLeftRec" Width="27" Height="27" Fill="DarkBlue" VerticalAlignment="Center" >
                                    <Rectangle.OpacityMask>
                                        <ImageBrush x:Name="topLeftImage" Stretch="Uniform"/>
                                    </Rectangle.OpacityMask>
                                </Rectangle>
                            </Viewbox>
                        </StackPanel>
                    </Button.Content>
                </Button>
                <Button Grid.Column="1" Grid.Row="0" Style="{StaticResource TransparentHoverButtonStyle}" x:Name="TM" BorderThickness="5, 0, 5, 5" BorderBrush="Black" Click="boardButtonClick">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <Viewbox Stretch="Uniform" Margin="0">
                                <Rectangle  x:Name="topMidRec" Width="27" Height="27" Fill="Red" VerticalAlignment="Center">
                                    <Rectangle.OpacityMask>
                                        <ImageBrush x:Name="topMidImage" Stretch="Uniform"/>
                                    </Rectangle.OpacityMask>
                                </Rectangle>
                            </Viewbox>
                        </StackPanel>
                    </Button.Content>
                </Button>
                <Button Grid.Column="2" Grid.Row="0" Style="{StaticResource TransparentHoverButtonStyle}" x:Name="TR" BorderThickness="5, 0, 0, 5" BorderBrush="Black" Click="boardButtonClick">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <Viewbox Stretch="Uniform" Margin="0">
                                <Rectangle  x:Name="topRightRec" Width="27" Height="27" Fill="Red" VerticalAlignment="Center">
                                    <Rectangle.OpacityMask>
                                        <ImageBrush x:Name="topRightImage" Stretch="Uniform"/>
                                    </Rectangle.OpacityMask>
                                </Rectangle>
                            </Viewbox>
                        </StackPanel>
                    </Button.Content>
                </Button>

                <!--The Middle Row of buttons-->
                <Button Grid.Column="0" Grid.Row="1" Style="{StaticResource TransparentHoverButtonStyle}" x:Name="ML" BorderThickness="0, 5, 5, 5" BorderBrush="Black" Click="boardButtonClick">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <Viewbox Stretch="Uniform" Margin="0">
                                <Rectangle  x:Name="midLeftRec" Width="27" Height="27" Fill="Red" VerticalAlignment="Center">
                                    <Rectangle.OpacityMask>
                                        <ImageBrush x:Name="midLeftImage" Stretch="Uniform"/>
                                    </Rectangle.OpacityMask>
                                </Rectangle>
                            </Viewbox>
                        </StackPanel>
                    </Button.Content>
                </Button>
                <Button Grid.Column="1" Grid.Row="1" Style="{StaticResource TransparentHoverButtonStyle}" x:Name="MM" BorderThickness="5, 5, 5, 5" BorderBrush="Black" Click="boardButtonClick">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <Viewbox Stretch="Uniform" Margin="0">
                                <Rectangle  x:Name="midMidRec" Width="27" Height="27" Fill="Red" VerticalAlignment="Center">
                                    <Rectangle.OpacityMask>
                                        <ImageBrush x:Name="midMidImage" Stretch="Uniform"/>
                                    </Rectangle.OpacityMask>
                                </Rectangle>
                            </Viewbox>
                        </StackPanel>
                    </Button.Content>
                </Button>
                <Button Grid.Column="2" Grid.Row="1" Style="{StaticResource TransparentHoverButtonStyle}" x:Name="MR" BorderThickness="5, 5, 0, 5" BorderBrush="Black" Click="boardButtonClick">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <Viewbox Stretch="Uniform" Margin="0">
                                <Rectangle  x:Name="midRightRec" Width="27" Height="27" Fill="DarkBlue" VerticalAlignment="Center">
                                    <Rectangle.OpacityMask>
                                        <ImageBrush x:Name="midRightImage" Stretch="Uniform"/>
                                    </Rectangle.OpacityMask>
                                </Rectangle>
                            </Viewbox>
                        </StackPanel>
                    </Button.Content>
                </Button>

                <!--The Bottom Row of buttons-->
                <Button Grid.Column="0" Grid.Row="2" Style="{StaticResource TransparentHoverButtonStyle}" x:Name="BL" BorderThickness="0, 5, 5, 0" BorderBrush="Black" Click="boardButtonClick">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <Viewbox Stretch="Uniform" Margin="0">
                                <Rectangle  x:Name="bottomLeftRec" Width="27" Height="27" Fill="Red" VerticalAlignment="Center">
                                    <Rectangle.OpacityMask>
                                        <ImageBrush x:Name="bottomLeftImage" Stretch="Uniform"/>
                                    </Rectangle.OpacityMask>
                                </Rectangle>
                            </Viewbox>
                        </StackPanel>
                    </Button.Content>
                </Button>
                <Button Grid.Column="1" Grid.Row="2" Style="{StaticResource TransparentHoverButtonStyle}" x:Name="BM" BorderThickness="5, 5, 5, 0" BorderBrush="Black" Click="boardButtonClick">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <Viewbox Stretch="Uniform" Margin="0">
                                <Rectangle  x:Name="bottomMidRec" Width="27" Height="27" Fill="Red" VerticalAlignment="Center">
                                    <Rectangle.OpacityMask>
                                        <ImageBrush x:Name="bottomMidImage" Stretch="Uniform"/>
                                    </Rectangle.OpacityMask>
                                </Rectangle>
                            </Viewbox>
                        </StackPanel>
                    </Button.Content>
                </Button>
                <Button Grid.Column="2" Grid.Row="2" Style="{StaticResource TransparentHoverButtonStyle}" x:Name="BR" BorderThickness="5, 5, 0, 0" BorderBrush="Black" Click="boardButtonClick">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <Viewbox Stretch="Uniform" Margin="0">
                                <Rectangle  x:Name="bottomRightRec" Width="27" Height="27" Fill="Red" VerticalAlignment="Center">
                                    <Rectangle.OpacityMask>
                                        <ImageBrush x:Name="bottomRightImage" Stretch="Uniform"/>
                                    </Rectangle.OpacityMask>
                                </Rectangle>
                            </Viewbox>
                        </StackPanel>
                    </Button.Content>
                </Button>

                <!--Text To Indicate Play Type-->
                <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" BorderBrush="{StaticResource DarkBorderBrushKey}" BorderThickness="3" Margin="0, 10, 0, 0">
                    <Viewbox Stretch="Uniform" Margin="0">
                        <TextBlock x:Name="playTypeText" Text="Please Pick A Play Option" FontWeight="Bold" Foreground="{StaticResource MainBorderBrushKey}"/>
                    </Viewbox>
                </Border>
            </Grid>
            
            
            <!--Grid for actual Functionallity Buttons-->
            <Border Grid.Column="1" BorderThickness="3, 0, 0, 0" BorderBrush="{StaticResource DarkBorderBrushKey}">
                <Viewbox  Stretch="Uniform">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!--The play vs friend button-->
                    <Button x:Name="PlayVsFriendButton" Style="{StaticResource LessRounddButton}" Margin="5" BorderThickness="3" BorderBrush="{StaticResource DarkBorderBrushKey}" Background="{StaticResource MainBorderBrushKey}" Click="pvpButtonClick">
                        <Viewbox Stretch="Uniform">
                            <TextBlock Text="Play Vs Friend" Margin="5" FontWeight="Bold" Foreground="White"/>
                        </Viewbox>
                    </Button>
                    <!--The play vs robot button-->
                    <Button Grid.Row="1" x:Name="PlayVsRobotButton" Style="{StaticResource LessRounddButton}" Margin="5" BorderThickness="3" BorderBrush="{StaticResource DarkBorderBrushKey}" Background="{StaticResource MainBorderBrushKey}" Click="pvrButtonClick">
                        <Viewbox Stretch="Uniform">
                            <TextBlock Text="Play Vs Robot" Margin="5" FontWeight="Bold" Foreground="White"/>
                        </Viewbox>
                    </Button>
                    <!--The reset button-->
                    <Button Grid.Row="2" x:Name="ResetBoardButton" Style="{StaticResource LessRounddButton}" Margin="5" BorderThickness="3" BorderBrush="{StaticResource DarkBorderBrushKey}" Background="{StaticResource MainBorderBrushKey}">
                        <Viewbox Stretch="Uniform">
                            <TextBlock Text="Reset Board" Margin="5" FontWeight="Bold" Foreground="White"/>
                        </Viewbox>
                    </Button>
                    <!--The undo move button button-->
                    <Button Grid.Row="2" x:Name="UndoMoveButton" Style="{StaticResource LessRounddButton}" Margin="5" BorderThickness="3" BorderBrush="{StaticResource DarkBorderBrushKey}" Background="{StaticResource MainBorderBrushKey}" IsEnabled="False" Click="undoMove">
                        <Viewbox Stretch="Uniform">
                            <TextBlock x:Name="undoButtonText" Text="Undo Move" Margin="5" FontWeight="Bold" Foreground="Gray"/>
                        </Viewbox>
                    </Button>
                    <!--The redo move button button-->
                    <Button Grid.Row="3" x:Name="RedoMoveButton" Style="{StaticResource LessRounddButton}" Margin="5" BorderThickness="3" BorderBrush="{StaticResource DarkBorderBrushKey}" Background="{StaticResource MainBorderBrushKey}" IsEnabled="False" Click="redoMove">
                        <Viewbox Stretch="Uniform">
                            <TextBlock x:Name="redoButtonText" Text="Redo Move" Margin="5" FontWeight="Bold" Foreground="Gray" />
                        </Viewbox>
                    </Button>
                    <!--The clear board button-->
                    <Button Grid.Row="4" x:Name="ClearButton" Style="{StaticResource LessRounddButton}" Margin="5" BorderThickness="3" BorderBrush="{StaticResource DarkBorderBrushKey}" Background="{StaticResource MainBorderBrushKey}" IsEnabled="true" Click="resetBoard">
                        <Viewbox Stretch="Uniform">
                            <TextBlock Text="Clear Board" Margin="5" FontWeight="Bold" Foreground="White" />
                        </Viewbox>
                    </Button>

                    <!--Maybe Add in a turn thingy here-->
                    <Viewbox Stretch="Uniform" Grid.Row="5">
                        <TextBlock x:Name="TurnText" Grid.Row="5" Margin="5" Text="Nobody's Turn" FontWeight="Bold" Foreground="{StaticResource DarkBorderBrushKey}"/>
                    </Viewbox>


                </Grid>
            </Viewbox>
            </Border>
                
            
        </Grid>
        
    </Grid>
</Page>
