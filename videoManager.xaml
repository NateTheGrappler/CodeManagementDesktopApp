<Page x:Class="CodeManagementSystem.videoManager"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CodeManagementSystem"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="videoManager">

    <Grid Background="#FFEEE8E8">

        <!--Main Grid Defintions-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--Title-->
        <Border BorderThickness="3" BorderBrush="#FF0078D7"  Grid.Column="1" Grid.ColumnSpan="2" Margin="2,2,2,2" Background="Transparent">
            <TextBlock Text="Video Resource Manager" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF0078D7" FontSize="24" FontWeight="Bold" FontStyle="Italic" FontFamily="Microsoft YaHei" TextAlignment="Center" Width="430"/>
        </Border>

        <!--Back Button-->
        <Border BorderThickness="3" BorderBrush="#FF0078D7"  Grid.Column="0" Grid.ColumnSpan="1" Margin="2,2,2,2" Background="Transparent" ToolTip="Go Back To Main Page">
            <Button x:Name="BackButton" Style="{DynamicResource RounddButton}" Foreground="AliceBlue" BorderBrush="#FF075A9B" BorderThickness="3" Margin="4,4,4,4" Background="#FF0078D7" Click="BackButton_Click">
                <TextBlock Text="&lt;" FontSize="32" FontWeight="Bold" FontFamily="Matura MT Script Capitals" Margin="0,0,2.2,3"/>
            </Button>
        </Border>

        <!--Create and Delete Button-->
        <Grid Grid.Row="1" Background="Transparent">
            <!--Grid to store both of the buttons-->
            <Grid.RowDefinitions>
                <RowDefinition Height="10"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>

                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Border BorderThickness="3" BorderBrush="#FF0078D7" Grid.RowSpan="7" Margin="2, 2, 2, 2"/>
            <!--The TrashCan/Delete Video Button-->
            <Button BorderThickness="2" Style="{DynamicResource RounddButton}" x:Name="DeleteButton" HorizontalAlignment="Center" VerticalAlignment="Center"  Background="Transparent" Width="45" Height="45" BorderBrush="#FF0078D7" Grid.Column="1" Grid.Row="2" ToolTip="Deleted Selected Video" Click="DeleteButton_Click">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <Rectangle Width="27" Height="27" Fill="#FF0078D7" VerticalAlignment="Center">
                            <Rectangle.OpacityMask>
                                <ImageBrush ImageSource="/Images/trashcanPng.png" Stretch="Uniform"/>
                            </Rectangle.OpacityMask>
                        </Rectangle>
                    </StackPanel>
                </Button.Content>
            </Button>
            <!--The plus/New video button-->
            <Button BorderThickness="2" Style="{DynamicResource RounddButton}" x:Name="NewButton" HorizontalAlignment="Center" VerticalAlignment="Center"  Background="Transparent" Width="45" Height="45" BorderBrush="#FF0078D7" Grid.Column="1" Grid.Row="1" ToolTip="Add In A New Video" Click="NewButton_Click">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <Rectangle Width="27" Height="27" Fill="#FF0078D7" VerticalAlignment="Center">
                            <Rectangle.OpacityMask>
                                <ImageBrush ImageSource="/Images/plusButtonImage-removebg-preview.png" Stretch="Uniform"/>
                            </Rectangle.OpacityMask>
                        </Rectangle>
                    </StackPanel>
                </Button.Content>
            </Button>
            <!--Search Button-->
            <Button BorderThickness="2" Style="{DynamicResource RounddButton}" x:Name="SearchButton" HorizontalAlignment="Center" VerticalAlignment="Center"  Background="Transparent" Width="45" Height="45" BorderBrush="#FF0078D7" Grid.Column="1" Grid.Row="3" ToolTip="Search For A Video" Click="SearchButton_Click">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <Rectangle Width="27" Height="27" Fill="#FF0078D7" VerticalAlignment="Center">
                            <Rectangle.OpacityMask>
                                <ImageBrush ImageSource="/Images/codeManagerIcon.png" Stretch="Uniform"/>
                            </Rectangle.OpacityMask>
                        </Rectangle>
                    </StackPanel>
                </Button.Content>
            </Button>
            <!--The save all content button-->
            <Button BorderThickness="2" Style="{DynamicResource RounddButton}" x:Name="SaveAllButton" HorizontalAlignment="Center" VerticalAlignment="Center"  Background="Transparent" Width="45" Height="45" BorderBrush="#FF0078D7" Grid.Column="1" Grid.Row="4" ToolTip="Manually Save All Content" Click="SaveAllButton_Click">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <Rectangle Width="27" Height="27" Fill="#FF0078D7" VerticalAlignment="Center">
                            <Rectangle.OpacityMask>
                                <ImageBrush ImageSource="/Images/saveButtonImage.png" Stretch="Uniform"/>
                            </Rectangle.OpacityMask>
                        </Rectangle>
                    </StackPanel>
                </Button.Content>
            </Button>
            <!--Save Only the content of this page-->
            <Button BorderThickness="2" Style="{DynamicResource RounddButton}" x:Name="SavePageButton" HorizontalAlignment="Center" VerticalAlignment="Center"  Background="Transparent" Width="45" Height="45" BorderBrush="#FF0078D7" Grid.Column="1" Grid.Row="5" ToolTip="Manually Save Content For This Page" Click="SavePageButton_Click">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <Rectangle Width="27" Height="27" Fill="#FF0078D7" VerticalAlignment="Center">
                            <Rectangle.OpacityMask>
                                <ImageBrush ImageSource="/Images/saveButtonImage.png" Stretch="Uniform"/>
                            </Rectangle.OpacityMask>
                        </Rectangle>
                    </StackPanel>
                </Button.Content>
            </Button>
        </Grid>

        <!--Tabs for all of the different Video Formats / On the right hand side-->
        <Grid Background="Transparent" Grid.Column="2" Grid.Row="1">

            <TabControl x:Name="TabControl" TabStripPlacement="Right" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" SelectionChanged="TabControl_SelectionChanged">

                <!--Set Up Tab resource so that way the tabs are on the righthand side-->
                <TabControl.Resources>
                    <Style TargetType="{x:Type TabItem}">
                        <!--This are just styilistic choices-->
                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        <Setter Property="VerticalAlignment"   Value="Stretch"/>
                        <Setter Property="FontFamily"           Value="Microsoft YaHei"/>
                        <Setter Property="FontSize"             Value="14"/>
                        <Setter Property="FontWeight"           Value="SemiBold"/>

                        <!--Set the actual property of it to be sideways and style the content -->
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <!--Grid Containing all of the items, holds main content as well as allows for animation-->
                                    <Grid Width="60" HorizontalAlignment="Stretch">
                                        <Border Name="Border" BorderThickness="0,3,3,3" BorderBrush="#FF075A9B" 
                                                CornerRadius="0,8,8,0" VerticalAlignment="Center" 
                                                HorizontalAlignment="Left" Width="24" Margin="2,2,0,0">
                                            <ContentPresenter x:Name="ContentSite"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"
                                                  ContentSource="Header"
                                                  Margin="10,5">
                                                <ContentPresenter.LayoutTransform>
                                                    <RotateTransform Angle="90"/>
                                                </ContentPresenter.LayoutTransform>
                                            </ContentPresenter>
                                        </Border>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <!--The multi trigger that detects mouse hover and holds the actual width animaiton-->
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True"/>
                                            </MultiTrigger.Conditions>
                                            <MultiTrigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation
                                                            Storyboard.TargetName="Border"
                                                            Storyboard.TargetProperty="Width"
                                                            To="40"
                                                            Duration="0:0:0.2"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </MultiTrigger.EnterActions>
                                            <MultiTrigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation
                                                            Storyboard.TargetName="Border"
                                                            Storyboard.TargetProperty="Width"
                                                            To="24"
                                                            Duration="0:0:0.2"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </MultiTrigger.ExitActions>
                                        </MultiTrigger>

                                        <!--This changes the color/style whenever you click on one of the tabs-->
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="AliceBlue" />
                                            <Setter TargetName="ContentSite" Property="TextElement.Foreground" Value="Black" />
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="False">
                                            <Setter TargetName="Border" Property="Background" Value="#FF0078D7" />
                                            <Setter TargetName="ContentSite" Property="TextElement.Foreground" Value="AliceBlue" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>

                <!--The Video Tab-->
                <TabItem x:Name ="VideoTab" Header="Videos"/>

                <!--The Playlists Tab-->
                <TabItem x:Name ="PlaylistTab" Header="PlayLists"/>

                <!--The Shorts/Reels Tab-->
                <TabItem x:Name ="ShortsTab" Header="Shorts"/>

                <!--The Other Tab-->
                <TabItem x:Name ="OtherTab" Header="Other"/>


            </TabControl>

            <!--Border for decorative purpose so it looks like theres something to hang on-->
            <Border BorderThickness="3, 0, 0, 3" BorderBrush="#FF0078D7" Margin="0, 0, 0, 2"/>
        </Grid>

        <!--The List View Boxes that hold all of the content, and also are controlled by the tabs-->
        <!--The Longer Form Videos ListBox-->
        <ListBox x:Name="VideoListBox"  Grid.Row="1" Grid.Column="1" Margin="20,10,20,30" Background="Red">

        </ListBox>
        
        
        <!--The Playlists ListBox-->
        <ListBox x:Name="PlaylistListBox"  Grid.Row="1" Grid.Column="1" Margin="20,10,20,30" Background="Green">

        </ListBox>
        
        <!--The Shorts ListBox-->
        <ListBox x:Name="ShortsListBox"  Grid.Row="1" Grid.Column="1" Margin="20,10,20,30" Background="MistyRose">

        </ListBox>
        
        <!--The Other ListBox-->
        <ListBox x:Name="OtherListBox"  Grid.Row="1" Grid.Column="1" Margin="20,10,20,30" Background="Purple">

        </ListBox>



    </Grid>
</Page>
