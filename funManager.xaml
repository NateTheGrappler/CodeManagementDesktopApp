<Page x:Class="CodeManagementSystem.funManager"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CodeManagementSystem"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="funManager">

    <!--Main grid that holds all items-->
    <Grid Background="{StaticResource MainBackgroundBrushKey}">
        
        <!--Row and column defintions-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!--The Title for the page-->
        <Border Grid.Column="1" Margin="2,2,2,2" Grid.Row="0" BorderBrush="{StaticResource MainBorderBrushKey}" BorderThickness="3">
            <Viewbox Stretch="Uniform" Margin="1">
                <TextBlock Text="Entertainment Manager" Margin="2, 2, 4, 2" Foreground="{StaticResource MainBorderBrushKey}" FontWeight="Bold" FontStyle="Italic" FontFamily="Microsoft YaHei" TextAlignment="Center" />
            </Viewbox>
        </Border>

        <!--The back button for the page-->
        <Border Grid.Column="0" Margin="2,2,2,2" Grid.Row="0" BorderBrush="{StaticResource MainBorderBrushKey}" BorderThickness="3">
            <Button x:Name="BackButton" Style="{DynamicResource RounddButton}" Foreground="AliceBlue" BorderBrush="#FF075A9B" BorderThickness="3" Margin="4,4,4,4" Background="#FF0078D7" Click="BackButton_Click">
                <TextBlock Text="&lt;" FontSize="32" FontWeight="Bold" FontFamily="Matura MT Script Capitals" Margin="0,0,2.2,3"/>
            </Button>
        </Border>
        
        <!--The Grid to hold all of the tic tac toe buttons-->
        <Grid  Grid.Row="1" Grid.ColumnSpan="2" Margin="10, 10, 10, 10" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--Grid for actual Tic Tac Toe Board-->
            <Grid Grid.Column="0" Margin="30, 10, 30, 10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!--The Buttons that make up the actual tic tac toe board-->

                    <!--The Top Row of buttons-->
                    <Button Grid.Column="0" Grid.Row="0" Style="{StaticResource TransparentHoverButtonStyle}" x:Name="topLeft" BorderThickness="0, 0, 5, 5" BorderBrush="Black">
                        <TextBlock x:Name="topLeftText"/>
                    </Button>
                    <Button Grid.Column="1" Grid.Row="0" Style="{StaticResource TransparentHoverButtonStyle}" x:Name="midTop" BorderThickness="5, 0, 5, 5" BorderBrush="Black">
                        <TextBlock x:Name="midTopText"/>
                    </Button>
                    <Button Grid.Column="2" Grid.Row="0" Style="{StaticResource TransparentHoverButtonStyle}" x:Name="topRight" BorderThickness="5, 0, 0, 5" BorderBrush="Black">
                        <TextBlock x:Name="topRightText"/>
                    </Button>

                    <!--The Middle Row of buttons-->
                    <Button Grid.Column="0" Grid.Row="1" Style="{StaticResource TransparentHoverButtonStyle}" x:Name="midLeft" BorderThickness="0, 5, 5, 5" BorderBrush="Black">
                        <TextBlock x:Name="midLeftText"/>
                    </Button>
                    <Button Grid.Column="1" Grid.Row="1" Style="{StaticResource TransparentHoverButtonStyle}" x:Name="midMid" BorderThickness="5, 5, 5, 5" BorderBrush="Black">
                        <TextBlock x:Name="midMidText"/>
                    </Button>
                    <Button Grid.Column="2" Grid.Row="1" Style="{StaticResource TransparentHoverButtonStyle}" x:Name="midRight" BorderThickness="5, 5, 0, 5" BorderBrush="Black">
                        <TextBlock x:Name="midRightText"/>
                    </Button>

                    <!--The Bottom Row of buttons-->
                    <Button Grid.Column="0" Grid.Row="2" Style="{StaticResource TransparentHoverButtonStyle}" x:Name="bottomLeft" BorderThickness="0, 5, 5, 0" BorderBrush="Black">
                        <TextBlock x:Name="bottomLeftText"/>
                    </Button>
                    <Button Grid.Column="1" Grid.Row="2" Style="{StaticResource TransparentHoverButtonStyle}" x:Name="bottomMid" BorderThickness="5, 5, 5, 0" BorderBrush="Black">
                        <TextBlock x:Name="bottomMidText"/>
                    </Button>
                    <Button Grid.Column="2" Grid.Row="2" Style="{StaticResource TransparentHoverButtonStyle}" x:Name="bottomRight" BorderThickness="5, 5, 0, 0" BorderBrush="Black">
                        <TextBlock x:Name="bottomRightText"/>
                    </Button>

                </Grid>
            
            
            <!--Grid for actual Functionallity Buttons-->
            <Border Grid.Column="1" BorderThickness="3, 0, 0, 0" BorderBrush="{StaticResource DarkBorderBrushKey}">
                <Viewbox  Stretch="Uniform">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!--The play vs friend button-->
                    <Button x:Name="PlayVsFriendButton" Style="{StaticResource LessRounddButton}" Margin="5" BorderThickness="3" BorderBrush="{StaticResource DarkBorderBrushKey}" Background="{StaticResource MainBorderBrushKey}">
                        <Viewbox Stretch="Uniform">
                            <TextBlock Text="Play Vs Friend" Margin="5" FontWeight="Bold" Foreground="White"/>
                        </Viewbox>
                    </Button>
                    <!--The play vs robot button-->
                    <Button Grid.Row="1" x:Name="PlayVsRobotButton" Style="{StaticResource LessRounddButton}" Margin="5" BorderThickness="3" BorderBrush="{StaticResource DarkBorderBrushKey}" Background="{StaticResource MainBorderBrushKey}">
                        <Viewbox Stretch="Uniform">
                            <TextBlock Text="Play Vs Robot" Margin="5" FontWeight="Bold" Foreground="White"/>
                        </Viewbox>
                    </Button>
                    <!--The reset button-->
                    <Button Grid.Row="2" x:Name="ResetBoardButton" Style="{StaticResource LessRounddButton}" Margin="5" BorderThickness="3" BorderBrush="{StaticResource DarkBorderBrushKey}" Background="{StaticResource MainBorderBrushKey}">
                        <Viewbox Stretch="Uniform">
                            <TextBlock Text="Reset Board" Margin="5" FontWeight="Bold" Foreground="White"/>
                        </Viewbox>
                    </Button>
                    <!--The undo move button button-->
                    <Button Grid.Row="2" x:Name="UndoMoveButton" Style="{StaticResource LessRounddButton}" Margin="5" BorderThickness="3" BorderBrush="{StaticResource DarkBorderBrushKey}" Background="{StaticResource MainBorderBrushKey}" IsEnabled="False">
                        <Viewbox Stretch="Uniform">
                            <TextBlock Text="Undo Move" Margin="5" FontWeight="Bold" Foreground="Gray"/>
                        </Viewbox>
                    </Button>
                    <!--The redo move button button-->
                    <Button Grid.Row="3" x:Name="RedoMoveButton" Style="{StaticResource LessRounddButton}" Margin="5" BorderThickness="3" BorderBrush="{StaticResource DarkBorderBrushKey}" Background="{StaticResource MainBorderBrushKey}" IsEnabled="False">
                        <Viewbox Stretch="Uniform">
                            <TextBlock Text="Redo Move" Margin="5" FontWeight="Bold" Foreground="Gray" />
                        </Viewbox>
                    </Button>

                    <!--The redo move button button-->
                    <Button Grid.Row="4" x:Name="ClearButton" Style="{StaticResource LessRounddButton}" Margin="5" BorderThickness="3" BorderBrush="{StaticResource DarkBorderBrushKey}" Background="{StaticResource MainBorderBrushKey}" IsEnabled="true">
                        <Viewbox Stretch="Uniform">
                            <TextBlock Text="Clear Board" Margin="5" FontWeight="Bold" Foreground="White" />
                        </Viewbox>
                    </Button>

                    <!--Maybe Add in a turn thingy here-->
                    <Viewbox Stretch="Uniform" Grid.Row="5">
                        <TextBlock Grid.Row="5" Margin="5" Text="Nobody's Turn" FontWeight="Bold" Foreground="{StaticResource DarkBorderBrushKey}"/>
                    </Viewbox>


                </Grid>
            </Viewbox>
            </Border>
                
            
        </Grid>
        
    </Grid>
</Page>
